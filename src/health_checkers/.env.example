# Knot identity in the ring.
NODE_ID=3                # Unique integer (Chang–Roberts).
NODE_NAME=hc-3           # to map to a Docker container when it needs to be revived.
LISTEN_HOST=0.0.0.0
LISTEN_PORT=9103         # local UDP port of this node.

# Ring peers (unidirectional). Format: id@host:port,id@host:port,...
RING_PEERS=1@hc-1:9101,2@hc-2:9102,4@hc-4:9104,5@hc-5:9105

# Heartbeat and timeouts
HEARTBEAT_INTERVAL_MS=800.
HEARTBEAT_TIMEOUT_MS=2500
SUSPECT_GRACE_MS=1200

# Leader election (Chang–Roberts).
ELECTION_BACKOFF_MS_MIN=300
ELECTION_BACKOFF_MS_MAX=900

# Leader loop (placeholder for "global ping" to all nodes).
LEADER_RANDOM_SLEEP_MIN_MS=1500
LEADER_RANDOM_SLEEP_MAX_MS=5000

# Reviving nodes using DooD (docker socket) — same concept as 'healther'.
# Mapping NODE_NAME->CONTAINER_NAME (comma separated).
REVIVE_TARGETS=hc-1=tp_hc_1,hc-2=tp_hc_2,hc-3=tp_hc_3,hc-4=tp_hc_4,hc-5=tp_hc_5
DOCKER_HOST=unix:///var/run/docker.sock

# Boot mode
MODE=auto   # auto | manual (manual only prints)
LOG_LEVEL=INFO
